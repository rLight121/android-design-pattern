<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rlight.responsibility.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <com.example.rlight.responsibility.viewtouch.MyLinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@color/grey"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/lly_my1">

        <com.example.rlight.responsibility.viewtouch.MyLinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/lly_my2">
            <com.example.rlight.responsibility.viewtouch.MyChildLinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/grey"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/lly_my3">

            <com.example.rlight.responsibility.viewtouch.MyButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="click"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/button_my"
                android:layout_marginBottom="15dp"/>


                <com.example.rlight.responsibility.viewtouch.MyButton
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="click2"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/button_my2"
                    android:layout_marginBottom="15dp"/>

                <com.example.rlight.responsibility.viewtouch.MyChildButton
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="click3"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/button_my3"
                    android:layout_marginBottom="15dp"/>


        </com.example.rlight.responsibility.viewtouch.MyChildLinearLayout>

       </com.example.rlight.responsibility.viewtouch.MyLinearLayout>
    </com.example.rlight.responsibility.viewtouch.MyLinearLayout>
    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="click"-->
        <!--android:id="@+id/btn"/>-->
</RelativeLayout>
